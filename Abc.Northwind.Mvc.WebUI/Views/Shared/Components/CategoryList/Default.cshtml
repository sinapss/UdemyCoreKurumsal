@model Abc.Northwind.Mvc.WebUI.Models.CategoryListViewModel
<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item list-group-item-action";
        if (category.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
            <a class="@css" href="/product/index?category=@category.CategoryId">@category.CategoryName</a>
    }
</div>